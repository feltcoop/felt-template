{
  "name": "felt-template",
  "description": "a web app template with SvelteKit, Gro, and Felt",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">= 16.6"
  },
  "scripts": {
    "start": "gro dev",
    "dev": "gro dev",
    "build": "gro build",
    "test": "gro test",
    "deploy": "gro deploy"
  },
  "devDependencies": {
    "@feltcoop/eslint-config": "^0.1.3",
    "@feltcoop/felt": "^0.22.1",
    "@feltcoop/gro": "^0.52.3",
    "@sveltejs/adapter-static": "^1.0.0-next.22",
    "@sveltejs/kit": "^1.0.0-next.203",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.4",
    "svelte-check": "^2.3.0",
    "svelte-preprocess-esbuild": "^2.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltcoop"
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
