{
  "name": "felt-template",
  "description": "a static web app and Node library template with SvelteKit, Gro, and Felt",
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://template.felt.dev/",
  "engines": {
    "node": ">=18.6"
  },
  "scripts": {
    "start": "gro dev",
    "dev": "gro dev",
    "build": "gro build",
    "test": "gro test",
    "deploy": "gro deploy"
  },
  "devDependencies": {
    "@feltjs/eslint-config": "^0.2.1",
    "@feltjs/felt-ui": "^0.53.0",
    "@feltjs/gro": "^0.75.2",
    "@feltjs/util": "^0.8.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.15.9",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "svelte": "^3.58.0",
    "svelte-check": "^3.2.0",
    "svelte-preprocess-esbuild": "^3.0.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltjs",
    "ignorePatterns": [
      "svelte.config.js",
      "vite.config.js"
    ]
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
